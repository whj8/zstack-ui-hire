{
  "compilerOptions": {
    "strict": true,
    "moduleResolution": "node",
    "target": "esnext",
    "module": "esnext",
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "typeRoots": ["node_modules/@types", "src/types"],
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["jest"]
  },
  "ts-node": {
    "esm": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}